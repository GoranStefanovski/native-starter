{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "target": "es2015",
    "sourceMap": true,
    "types": [ "node" ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2015"
    ],
    "paths": {
      "@/*": [
        "client/src/*"
      ]
    }
  },
  "include": [
    "client/src/**/*.ts",
    "client/src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
